<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lands.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Lands - Login.">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <!--<Label Text="Lands"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" 
                 />-->
                <Image
                HeightRequest="180"                  
                Source="onu.png">
                </Image>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label  
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="E-Mail"
                    VerticalOptions="Center">
                    </Label>
                    <Entry
                     Grid.Row="0"
                    Grid.Column="1"
                Keyboard="Email"
                Placeholder="Enter your E-Mail.....">
                    </Entry>

                    <Label 
                    Grid.Row="1"
                    Grid.Column="0"
                     Text="Password"
                    VerticalOptions="Center">
                    </Label>
                    <Entry
                        
                    Grid.Row="1"
                    Grid.Column="1"
                IsEnabled="True"
                Placeholder="Enter your Password.....">
                    </Entry> 
                </Grid>
                <ActivityIndicator>

                </ActivityIndicator>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Rememberme on this Device."
                       VerticalOptions="Center"
                       HorizontalOptions="StartAndExpand"></Label>
                    <Switch HorizontalOptions="End"></Switch>
                </StackLayout>
                <Label  HorizontalOptions="Center" TextColor="Blue" Text="Forgot your Password?"></Label>              
                <StackLayout  Orientation="Horizontal">
                    <Button  
                BackgroundColor="Navy"
                BorderRadius="23"
                HeightRequest="46"
                        HorizontalOptions="FillAndExpand"
                Text="Login."
                TextColor="White">
                    </Button>
                    <Button 
                BackgroundColor="Purple"
                BorderRadius="23"
                 HeightRequest="46"
                        HorizontalOptions="FillAndExpand"
                 Text="Register."
                TextColor="White">
                    </Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Image Source="facebook_logo" WidthRequest="90"></Image>
                    <Image Source="twitter_logo" WidthRequest="80"></Image>
                    <Image Source="instagram_logo" WidthRequest="65"></Image>
                </StackLayout>

            </StackLayout>

        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>